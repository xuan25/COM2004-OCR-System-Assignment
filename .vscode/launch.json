    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run powershell",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/code/run.ps1",
            "cwd": "${workspaceFolder}/code"
        },
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/code",
            "program": "${workspaceFolder}/code/train.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Dev classify",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/code",
            "program": "${workspaceFolder}/code/evaluate.py",
            "args": ["dev"],
            "console": "integratedTerminal"
        }
    ]
}